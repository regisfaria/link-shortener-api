{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./build",                       
    "rootDir": "./src",                       
    "strict": true,                          
    "strictPropertyInitialization": false,    
    "baseUrl": "./src",                      
    "esModuleInterop": true,                 
    "experimentalDecorators": true,          
    "emitDecoratorMetadata": true,           
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  }
}
